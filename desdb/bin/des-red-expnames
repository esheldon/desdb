#!/usr/bin/env python
"""
    %prog [options] run

List the exposure names for the red run
"""

import sys
import desdb

from optparse import OptionParser
parser=OptionParser(__doc__)
parser.add_option('--exptime',default=30.0,
                  help="ensure exptime > this value, default %default")

def main():
    options,args = parser.parse_args(sys.argv[1:])

    if len(args) < 1:
        parser.print_help()
        sys.exit(1)

    run=args[0]
    exptime=float(options.exptime)
    query="""
        select 
            distinct(exposurename)
        from 
            exposure,image 
        where 
            image.imagetype='red' 
            and image.exposureid=exposure.id 
            and image.project='OPS' 
            and image.run='%(run)s' 
            and exposure.exptime > %(exptime)f
            """
    query=query % {'run': run, 'exptime':exptime}

    conn=desdb.Connection()
    res=conn.quick(query)
    if len(res)==0:
        return
    for r in res:
        expname=r['exposurename']
        print expname[0:expname.find('.')]
main()
