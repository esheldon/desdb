def main():
    options,args = parser.parse_args(sys.argv[1:])

    if len(args) < 1:
        parser.print_help()
        sys.exit(1)

    run=args[0]
    expname=options.expname

    d=Downloader(run, expname=expname)
    d.pull()

main()
